{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "rootDir": "./"
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker":true,
        "forkCheckerSilent":true,
        "useBabel":false,
        "useCache":true,
        "skipDeclarationFilesCheck":false
    },
    "exclude": ["test",
        "node_modules"
    ]
}
